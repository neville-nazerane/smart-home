@page "/listenedLogs"

@if (logs is not null){
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Device ID</th>
                <th scope="col">Name</th>
                <th scope="col">Device Type</th>
                <th scope="col">Occurred On</th>
                <th scope="col">State</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in logs)
            {
                <tr>
                    <td>@log.DeviceId</td>
                    <td>@log.Name</td>
                    <td>@log.DeviceType</td>
                    <td>@log.LoggedOn?.ToLocalTime().ToString("h:mm:ss tt")</td>
                    <td>@log.State</td>
                </tr>
            }
        </tbody>
    </table>

}